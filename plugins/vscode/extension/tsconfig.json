{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "module": "Node16",
    "target": "ES2022",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "out",
    "declarationMap": true,
    "declaration": true,
    "rootDir": "./src/",
  },
  "exclude": ["tests/"],
  "include": ["src/**/*"],
}
