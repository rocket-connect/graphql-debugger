{
  "name": "@graphql-debugger/monorepo",
  "version": "0.0.0-alpha.48",
  "private": true,
  "scripts": {
    "dev": "cross-env DEBUG=\"@graphql-debugger:*\" TRACE_SCHEMA=\"true\" turbo dev --filter \"graphql-debugger\"",
    "build": "turbo build",
    "test:sequential": "pnpm recursive exec -- sh -c 'pnpm run test || (echo \"Tests failed!\" && exit 1)'",
    "test": "turbo test",
    "clean": "find . -type d \\( -name \"node_modules\" -o -name \"build\" -o -name \".turbo\" \\) -exec rm -rf {} +",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@babel/core": "7.22.17",
    "@babel/preset-env": "7.22.15",
    "@babel/preset-typescript": "7.22.15",
    "@jest/globals": "29.7.0",
    "@trivago/prettier-plugin-sort-imports": "^4.2.0",
    "@tsconfig/node18": "^18.2.0",
    "@types/express": "4.17.17",
    "@types/jest": "29.5.4",
    "@types/node": "^18",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "6.6.0",
    "cross-env": "^7.0.3",
    "eslint": "8.48.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-config-standard-with-typescript": "39.0.0",
    "eslint-plugin-import": "2.28.1",
    "eslint-plugin-n": "^16.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.1.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "29.6.4",
    "prettier": "^3",
    "supertest": "6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "10.9.1",
    "turbo": "1.10.14",
    "typescript": "^5.2.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/*",
        "typescript",
        "ts-node",
        "@tsconfig/*",
        "@types/*",
        "jest",
        "@jest/*",
        "supertest",
        "prettier"
      ]
    }
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  }
}
