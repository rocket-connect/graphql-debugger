{
  "name": "@graphql-debugger/monorepo",
  "version": "0.0.0-alpha.67",
  "private": true,
  "scripts": {
    "dev": "cross-env turbo dev --filter '!graphql-debugger' --filter '!@graphql-debugger/landing-page-app' --filter '!@graphql-debugger/landing-page-server' --concurrency=18",
    "build": "turbo build",
    "release": "cross-env DEBUG=\"@graphql-debugger:*\" node ./packages/utils/build/release.js",
    "test:sequential": "pnpm recursive exec -- sh -c 'pnpm run test || (echo \"Tests failed!\" && exit 1)'",
    "test": "turbo test",
    "clean": "find . -type d \\( -name \"node_modules\" -o -name \"build\" -o -name \".turbo\" \\) -exec rm -rf {} +",
    "lint": "eslint .",
    "format": "prettier --write .",
    "reset-db": "cd ./packages/data-access && npx prisma migrate reset --force"
  },
  "devDependencies": {
    "@babel/core": "7.23.2",
    "@babel/preset-env": "7.23.2",
    "@babel/preset-typescript": "7.23.2",
    "@jest/globals": "29.7.0",
    "@trivago/prettier-plugin-sort-imports": "4.2.1",
    "@tsconfig/node18": "18.2.2",
    "@types/express": "4.17.20",
    "@types/jest": "29.5.6",
    "@types/node": "^20.8.9",
    "@types/react": "18.2.33",
    "@types/react-dom": "18.2.14",
    "@types/supertest": "2.0.15",
    "@types/webpack": "5.28.4",
    "@typescript-eslint/eslint-plugin": "6.9.0",
    "autoprefixer": "10.4.16",
    "clean-webpack-plugin": "4.0.0",
    "compression-webpack-plugin": "10.0.0",
    "copy-webpack-plugin": "11.0.0",
    "cross-env": "7.0.3",
    "css-loader": "6.8.1",
    "eslint": "8.52.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-config-standard-with-typescript": "39.1.1",
    "eslint-plugin-import": "2.29.0",
    "eslint-plugin-n": "16.2.0",
    "eslint-plugin-prettier": "5.0.1",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "file-loader": "6.2.0",
    "html-webpack-plugin": "5.5.3",
    "jest": "29.7.0",
    "node-polyfill-webpack-plugin": "2.0.1",
    "postcss": "8.4.31",
    "postcss-loader": "7.3.3",
    "prettier": "^3.0.3",
    "style-loader": "3.3.3",
    "supertest": "6.3.3",
    "svg-url-loader": "8.0.0",
    "tailwindcss": "3.3.5",
    "terser-webpack-plugin": "5.3.9",
    "ts-jest": "29.1.1",
    "ts-loader": "9.5.0",
    "ts-node": "10.9.1",
    "turbo": "1.10.16",
    "typescript": "5.2.2",
    "url-loader": "4.1.1",
    "webpack": "5.89.0",
    "webpack-cli": "5.1.4",
    "webpack-dev-server": "4.15.1"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/*",
        "typescript",
        "ts-node",
        "@tsconfig/*",
        "@types/*",
        "jest",
        "@jest/*",
        "supertest",
        "prettier"
      ]
    }
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  }
}
